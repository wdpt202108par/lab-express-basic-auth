<h2>Login page here</h2>


{{#if errMessage}}
    <h2>{{errMessage}}</h2>
{{/if}}

<form action="/login" method="POST">
    {{!-- BONUS : frontend validation --}}
    <label>
        Username:
        <input type="text" name="username" required>
    </label>
    <label>
        Password:
        <input type="password" name="password" required>
    </label>
    <button>Log me IN!</button>
</form>
